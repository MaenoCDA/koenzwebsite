###########################
# DigitalOcean Production Environment
############################

# Server Configuration
NODE_ENV=production
HOST=0.0.0.0
PORT=1337
WEB_URL=https://koenz-cms.ondigitalocean.app
WEBHOOKS_POPULATE_RELATIONS=false

# SSL Configuration - DigitalOcean handles SSL automatically
NODE_TLS_REJECT_UNAUTHORIZED=0

# Strapi Configuration
STRAPI_URL=https://koenz-cms.ondigitalocean.app
STRAPI_ADMIN_BACKEND_URL=https://koenz-cms.ondigitalocean.app
STRAPI_TELEMETRY_DISABLED=true

# Database (DigitalOcean Managed PostgreSQL - aanpassen indien nodig)
DATABASE_CLIENT=postgres
DATABASE_HOST=jouw-db-host.ondigitalocean.com
DATABASE_PORT=25060
DATABASE_NAME=jouw-db-naam
DATABASE_USERNAME=jouw-db-user
DATABASE_PASSWORD=jouw-db-password
DATABASE_SSL=true

# Secrets (Genereer nieuwe secrets voor productie)
APP_KEYS=genereer-hier-jouw-app-keys,app-key-2,app-key-3
API_TOKEN_SALT=genereer-hier-jouw-salt
ADMIN_JWT_SECRET=genereer-hier-jouw-jwt-secret
TRANSFER_TOKEN_SALT=genereer-hier-jouw-transfer-salt
JWT_SECRET=genereer-hier-jouw-secret

# Admin Configuration
STRAPI_PLUGIN_I18N_INIT_LOCALE_CODE=nl
BROWSER=false
UPDATES_ENABLED=false
STRAPI_DISABLE_REMOTE_DATA_TRANSFER=true

# Cron
CRON_ENABLED=false

# Email (optioneel)
EMAIL_DEFAULT_FROM=noreply@jouw-domein.nl
EMAIL_DEFAULT_REPLY_TO=noreply@jouw-domein.nl

# S3 (optioneel voor file uploads)
AWS_ACCESS_KEY_ID=jouw-aws-key
AWS_ACCESS_SECRET=jouw-aws-secret
AWS_BUCKET=jouw-s3-bucket

# Meilisearch (optioneel)
MEILISEARCH_INDEX_NAME=koenz_cms
MEILISEARCH_HOST=https://meilisearch.jouw-domein.com
MEILISEARCH_API_KEY=jouw-meilisearch-key

# DigitalOcean Specific
# Geen extra variabelen nodig - DigitalOcean handelt SSL en routing automatisch