###########################
# Render Production Environment
############################

# Server Configuration
NODE_ENV=production
HOST=0.0.0.0
PORT=1337
WEB_URL=https://koenz-cms-final.onrender.com
WEBHOOKS_POPULATE_RELATIONS=false

# SSL Configuration - CRITICAL FOR RENDER
NODE_TLS_REJECT_UNAUTHORIZED=true

# Strapi Configuration
STRAPI_URL=https://koenz-cms-final.onrender.com
STRAPI_ADMIN_BACKEND_URL=https://koenz-cms-final.onrender.com
STRAPI_TELEMETRY_DISABLED=true

# Database (Render PostgreSQL - aanpassen indien nodig)
DATABASE_CLIENT=postgres
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=koenz_cms
DATABASE_USERNAME=koenz_user
DATABASE_PASSWORD=jouw_wachtwoord
DATABASE_SSL=true

# Secrets (Genereer nieuwe secrets voor productie)
APP_KEYS=jouw-app-key-1,jouw-app-key-2,jouw-app-key-3
API_TOKEN_SALT=jouw-salt
ADMIN_JWT_SECRET=jouw-jwt-secret
TRANSFER_TOKEN_SALT=jouw-transfer-salt
JWT_SECRET=jouw-secret

# Admin Configuration
STRAPI_PLUGIN_I18N_INIT_LOCALE_CODE=nl
BROWSER=false
UPDATES_ENABLED=false
STRAPI_DISABLE_REMOTE_DATA_TRANSFER=true

# Cron
CRON_ENABLED=false

# Email (optioneel)
EMAIL_DEFAULT_FROM=noreply@jouw-domein.nl
EMAIL_DEFAULT_REPLY_TO=noreply@jouw-domein.nl

# S3 (optioneel voor file uploads)
AWS_ACCESS_KEY_ID=jouw-aws-key
AWS_ACCESS_SECRET=jouw-aws-secret
AWS_BUCKET=jouw-s3-bucket

# Meilisearch (optioneel)
MEILISEARCH_INDEX_NAME=koenz_cms
MEILISEARCH_HOST=https://meilisearch.jouw-domein.com
MEILISEARCH_API_KEY=jouw-meilisearch-key