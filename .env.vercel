###########################
# Vercel Environment Variables (Next.js Frontend)
############################

# API Connection - BELANGRIJK!
# Vervang met je daadwerkelijke DigitalOcean CMS URL
NEXT_PUBLIC_CMS_URL=https://koenzwebsite-xxxx.ondigitalocean.app
NEXT_PUBLIC_API_URL=https://koenzwebsite-xxxx.ondigitalocean.app/api

# Environment
NODE_ENV=production

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://koenzwebsite-web.vercel.app

# Search Configuration (optioneel)
NEXT_PUBLIC_MEILISEARCH_HOST=
NEXT_PUBLIC_MEILISEARCH_API_KEY=
NEXT_PUBLIC_ALGOLIA_APP_ID=
NEXT_PUBLIC_ALGOLIA_SEARCH_KEY=

# Analytics (optioneel)
NEXT_PUBLIC_GA_ID=
NEXT_PUBLIC_HOTJAR_ID=

# Social Media (optioneel)
NEXT_PUBLIC_FACEBOOK_URL=
NEXT_PUBLIC_TWITTER_URL=
NEXT_PUBLIC_LINKEDIN_URL=
NEXT_PUBLIC_INSTAGRAM_URL=

# Contact (optioneel)
NEXT_PUBLIC_EMAIL=noreply@jouw-domein.nl
NEXT_PUBLIC_PHONE=

# Features
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_CHAT=false

# Development/Testing
NEXT_PUBLIC_DEBUG=false
NEXT_PUBLIC_SHOW_PERFORMANCE=false

# SECURITY: Alleen NEXT_PUBLIC_ variabelen zijn toegankelijk in de browser
# CMS variabelen zoals DATABASE_URL, JWT_SECRET etc. horen NIET hier!
# Deze gaan naar de DigitalOcean CMS environment.